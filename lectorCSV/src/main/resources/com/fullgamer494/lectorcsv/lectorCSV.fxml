<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fullgamer494.lectorcsv.lectorCSVController"
      styleClass="main-container">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="top-bar">
            <children>
                <Button fx:id="openFileButton" mnemonicParsing="false" onAction="#handleOpenFile"
                        styleClass="primary-button" text="Abrir CSV" />
                <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear"
                        styleClass="secondary-button" text="Limpiar" />
            </children>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
        </HBox>

        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS"
                    styleClass="data-scroll-pane">
            <content>
                <VBox fx:id="dataDisplayContainer" spacing="5.0" styleClass="data-container">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
            <VBox.margin>
                <Insets left="15.0" right="15.0" />
            </VBox.margin>
        </ScrollPane>

        <HBox alignment="CENTER" spacing="10.0" styleClass="bottom-controls">
            <children>
                <Button fx:id="firstButton" mnemonicParsing="false" onAction="#handleFirst"
                        styleClass="nav-button" text="⏮" />
                <Button fx:id="prevButton" mnemonicParsing="false" onAction="#handlePrevious"
                        styleClass="nav-button" text="←" />
                <Label fx:id="rowCounterLabel" styleClass="counter-label" text="Fila: 0 de 0" />
                <Button fx:id="nextButton" mnemonicParsing="false" onAction="#handleNext"
                        styleClass="nav-button" text="→" />
                <Button fx:id="lastButton" mnemonicParsing="false" onAction="#handleLast"
                        styleClass="nav-button" text="⏭" />
            </children>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>