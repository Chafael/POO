<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fullgamer494.figuras.figurasController">
    <children>
        <!-- Título -->
        <Label alignment="CENTER" text="Calculadora de Figuras Geométricas" textFill="#2c3e50">
            <font>
                <Font name="Arial Bold" size="24.0" />
            </font>
        </Label>

        <!-- Selector de figura -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Selecciona una figura:">
                    <font>
                        <Font name="Arial Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="comboFiguras" prefWidth="150.0"
                          style="-fx-background-color: #ff7849; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" />
            </children>
        </HBox>

        <!-- Panel para inputs dinámicos -->
        <VBox fx:id="panelInputs" alignment="CENTER" spacing="10.0"
              style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 10; -fx-padding: 20;">
        </VBox>

        <!-- Botón calcular -->
        <Button fx:id="btnCalcular" mnemonicParsing="false" text="Calcular Área y Perímetro"
                style="-fx-background-color: #ff7849; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10 20; -fx-border-radius: 5;">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <!-- Área de resultados -->
        <TextArea fx:id="resultadoArea" editable="false" prefRowCount="6"
                  style="-fx-background-color: #f8f9fa; -fx-border-color: #ddd; -fx-border-radius: 5; -fx-font-family: 'Courier New'; -fx-font-size: 12px;" />

        <!-- Botón limpiar -->
        <Button fx:id="btnLimpiar" mnemonicParsing="false" text="Limpiar"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-border-radius: 5;">
            <font>
                <Font size="12.0" />
            </font>
        </Button>
    </children>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>